FROM ghcr.io/astral-sh/uv:python3.12-trixie

RUN adduser agentbeats
USER agentbeats
RUN mkdir -p /home/agentbeats/.cache/uv
WORKDIR /home/agentbeats/app

COPY pyproject.toml uv.lock README.md ./
COPY src src
COPY --chown=agentbeats:agentbeats external external

# Clean up any local build artifacts from external packages
RUN find external -type d -name "*.egg-info" -exec rm -rf {} + || true
RUN find external -type d -name "__pycache__" -exec rm -rf {} + || true

RUN \
    --mount=type=cache,target=/home/agentbeats/.cache/uv,uid=1000 \
    uv sync --locked

ENTRYPOINT ["uv", "run", "src/purple_car_bench_agent/server.py"]
CMD ["--host", "0.0.0.0"]
EXPOSE 8080
